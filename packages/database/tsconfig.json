{
  "display": "Default",
  "compilerOptions": {
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noEmit": false,
    "rootDir": "./src",
    "outDir": "./dist",
    "declarationDir": "./types",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "preserveWatchOutput": true,
    "strict": true
  },
  "exclude": ["node_modules", "./types", "./dist"]
}

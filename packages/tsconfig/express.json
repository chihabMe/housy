{
  "extends": "./base.json",
  "compilerOptions": {
    "target": "es5",
    "forceConsistentCasingInFileNames": true,

    "allowJs": true,
    "skipLibCheck": true,
    "incremental": true,
    "strict": true,

    "esModuleInterop": true,
    "declarationMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*.ts"]
}

{
  "extends": "./base.json",
  "compilerOptions": {
    "declaration": false,
    "declarationMap": false,
    "allowJs": false,
    "strict": true,
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "module": "CommonJS",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "preserveWatchOutput": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}

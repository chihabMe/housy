{
  "name": "frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build:next": "next build",
    "build:server": "tsc --project tsconfig.server.json ",
    "build": "pnpm run build:next && pnpm run build:server",
    "start": "NODE_ENV=production node ./dist/app.js",
    "lint": "next lint",
    "dev": "dotenv -e .env.development   nodemon ./server/src/app.ts",
    "dev:start": "dotenv -e .env.production -- node ./dist/app.js",
    "test": "dotenv -e .env.test  -- jest -i ",
    "dprisma": "dotenv -e .env.development -- prisma   ",
    "migrate:test": "dotenv -e .env.test -- pnpm prisma migrate deploy"
  },
  "dependencies": {
    "@types/node": "18.15.0",
    "@types/react": "18.0.28",
    "@types/react-dom": "18.0.11",
    "eslint": "8.35.0",
    "eslint-config-next": "13.2.3",
    "next": "13.2.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "typescript": "4.9.5",
    "@prisma/client": "^4.10.1",
    "bcrypt": "^5.1.0",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "http-status": "^1.6.2",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.1",
    "nodemon": "^2.0.20",
    "redis": "^4.6.4",
    "ts-node": "^10.9.1",
    "zod": "^3.20.6"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.4.0",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.14.0",
    "@types/nodemailer": "^6.4.7",
    "@types/redis": "^4.0.11",
    "@types/supertest": "^2.0.12",
    "jest": "^29.4.3",
    "jest-mock-extended": "2.0.4",
    "prisma": "^4.10.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5"
  }

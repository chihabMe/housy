{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "api:dev": { "cache": false },
    "api:build": {
      "cache": false
    },
    "api:start": {
      "cache": false
    },
    "web:build": {
      "cache": false
    }
  }
}

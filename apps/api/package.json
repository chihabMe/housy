{
  "name": "api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "api:dev": "dotenv -e .env.development -- nodemon ./src/app.ts",
    "dev": "pnpm run api:dev",
    "api:build": "tsc",
    "build": "pnpm run db:migrate && pnpm run api:build",
    "api:start": "dotenv -e .env.production node ./dist/app.js",
    "start": "NODE_ENV=production node ./dist/app.js",
    "api:test": "dotenv -e .env.production -- jest",
    "db:deploy": "dotenv -e .env.production -- pnpm prisma migrate deploy",
    "db:migrate": "dotenv -e .env.development -- pnpm prisma migrate dev",
    "db:generate": "dotenv -e .env.development -- pnpm prisma  generate",
    "db:push": "dotenv -e .env.development -- pnpm prisma push --skip-migrate",
    "db:studio": "dotenv -e .env.development -- pnpm prisma studio",
    "db:studio:production": "dotenv -e .env.production -- pnpm prisma studio",
    "db:migrate:test": "dotenv -e .env.test -- pnpm prisma migrate dev"
  },
  "dependencies": {
    "@prisma/client": "^4.11.0",
    "@redis/client": "^1.5.6",
    "@redis/graph": "^1.1.0",
    "bcrypt": "^5.1.0",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "http-status": "^1.6.2",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.1",
    "nodemon": "^2.0.20",
    "postinstall": "^0.8.0",
    "redis": "^4.6.5",
    "ts-node": "^10.9.1",
    "zod": "^3.20.6"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.4.0",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.14.0",
    "@types/nodemailer": "^6.4.7",
    "@types/supertest": "^2.0.12",
    "eslint": "7.32.0",
    "eslint-config-custom": "workspace:*",
    "jest": "^29.4.3",
    "jest-mock-extended": "2.0.4",
    "prisma": "^4.11.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "tsconfig": "workspace:*",
    "typescript": "^4.9.5"
  },
  "keywords": [],
